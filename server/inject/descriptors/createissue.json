{
  "type": "object",
  "properties": {
    "iscreateissue": {
      "type": "identifier",
      "selector": ".form-title",
      "control": "exists",
      "selectContains": "Enter Report Details"
    },
    "category": {
      "type": "select",
      "selector": "[name=\"category_id\"]",
      "control": "select"
    },
    "summary": {
      "type": "string",
      "selector": "input[name=\"summary\"]",
      "control": "text"
    },
    "description": {
      "type": "string",
      "selector": "textarea[name=\"description\"]",
      "control": "text"
    },
    "photo": {
      "type": "string",
      "selector": "[id*=\"ufile\"]",
      "control": "text"
    },
    "submit": {
      "type": "action",
      "selector": "input[type=\"submit\"]",
      "control": "action.button"
    }
  },
  "connect": [
    {
      "match": [
        "iscreateissue"
      ],
      "screens": [
        "createissue"
      ]
    }
  ]
}
